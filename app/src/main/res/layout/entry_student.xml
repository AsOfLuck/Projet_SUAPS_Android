<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/entreeEtudiant"
        android:padding="@dimen/espacement"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/espacement"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/nomEtudiant"
        style="@style/ElementHorizontal"
        android:layout_weight="4" />

    <TextView
        android:id="@+id/tempsEcoule"
        style="@style/ElementHorizontal"
        android:layout_weight="1"
        android:text="@string/affichageTempsBidon"
        android:textAlignment="center" />

</LinearLayout></android.support.v7.widget.CardView>
